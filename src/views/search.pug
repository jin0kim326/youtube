extends layouts/main
include mixins/videoBlock

block content
    //- .search__header
    //-     h3 Searching for: #{searchingBy}
    .search__videos.home-videos
        if videos.length === 0
            h5 No Videos Found
        each item in videos
            +videoBlock({
                title:item.title,
                views:item.views,
                videoFile:item.fileUrl,
                id:item.id,
                creatorAvatarUrl:item.creator.avatarUrl,
                creatorName:item.creator.name,
                uploadTime:item.uploadTime
            })
